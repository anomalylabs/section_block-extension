<div
        id="block--{{ block.id }}"
        class="block block--{{ block.extension.value.slug }} {{ block.extension.value.slug }}--{{ block.size.key }}">

    {% if block.title.value and not block.display_title.isFalse() %}
        <h3 class="block__title">
            {{ block.title }}
        </h3>
    {% endif %}

    <div class="block__content">
        {{ content|raw }}
    </div>

</div>
