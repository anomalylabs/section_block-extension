<style type="text/css">

    /**
     * Positioning & Visibility
     */
    .block--{{ block.id }} {
        margin-top: {{ block.desktop_margin_top.value }};
        margin-left: {{ block.desktop_margin_left.value }};
        margin-right: {{ block.desktop_margin_right.value }};
        margin-bottom: {{ block.desktop_margin_bottom.value }};
        visibility: {{ 'desktop' in block.responsive_visibility.keys ? 'hidden' : 'visible' }};
        display: {{ 'desktop' in block.responsive_visibility.keys ? 'none' : 'inherit' }};
        border-top-left-radius: {{ block.border_radius_top_left.value ?: 0 }}px;
        border-top-right-radius: {{ block.border_radius_top_right.value ?: 0 }}px;
        border-bottom-left-radius: {{ block.border_radius_bottom_left.value ?: 0 }}px;
        border-bottom-right-radius: {{ block.border_radius_bottom_right.value ?: 0 }}px;
    }

    @media (min-width: 480px) {
        .block--{{ block.id }} {
            margin-top: {{ block.phone_margin_top.value }};
            margin-left: {{ block.phone_margin_left.value }};
            margin-right: {{ block.phone_margin_right.value }};
            margin-bottom: {{ block.phone_margin_bottom.value }};
            visibility: {{ 'phone' in block.responsive_visibility.keys ? 'hidden' : 'visible' }};
            display: {{ 'phone' in block.responsive_visibility.keys ? 'none' : 'inherit' }};
        }
    }

    @media (min-width: 768px) {
        .block--{{ block.id }} {
            margin-top: {{ block.tablet_margin_top.value }};
            margin-left: {{ block.tablet_margin_left.value }};
            margin-right: {{ block.tablet_margin_right.value }};
            margin-bottom: {{ block.tablet_margin_bottom.value }};
            visibility: {{ 'tablet' in block.responsive_visibility.keys ? 'hidden' : 'visible' }};
            display: {{ 'tablet' in block.responsive_visibility.keys ? 'none' : 'inherit' }};
        }
    }

    /**
     * Layout & Background
     */
    .block--{{ block.id }} .section__container {
        padding-top: {{ block.desktop_padding_top.value ?: 0 }};
        padding-left: {{ block.desktop_padding_left.value ?: 0 }};
        padding-right: {{ block.desktop_padding_right.value ?: 0 }};
        padding-bottom: {{ block.desktop_padding_bottom.value ?: 0 }};
        background-image: {{ block.background_image.make.css ?: 'none' }};
        background-color: {{ block.background_color.value ?: 'transparent' }};
    }

    @media (max-width: 768px) {
        .block--{{ block.id }} .section__container {
            padding-top: {{ block.tablet_padding_top.value }};
            padding-left: {{ block.tablet_padding_left.value }};
            padding-right: {{ block.tablet_padding_right.value }};
            padding-bottom: {{ block.tablet_padding_bottom.value }};
        }
    }

    @media (max-width: 480px) {
        .block--{{ block.id }} .section__container {
            padding-top: {{ block.phone_padding_top.value }};
            padding-left: {{ block.phone_padding_left.value }};
            padding-right: {{ block.phone_padding_right.value }};
            padding-bottom: {{ block.phone_padding_bottom.value }};
        }
    }

    /**
     * Divider
     */
    .block--{{ block.id }} .section__divider--top svg path {
        fill: {{ block.top_divider_color.value ?: '#ffffff' }};
    }

    .block--{{ block.id }} .section__divider--top {
        height: {{ block.top_divider_height.value ?: 'initial' }};
        transform: scaleX({{ block.top_divider_flip_horizontally.value ? '-1' : 1 }});
    }

    .block--{{ block.id }} .section__divider--bottom svg path {
        fill: {{ block.bottom_divider_color.value ?: '#ffffff' }};
    }

    .block--{{ block.id }} .section__divider--bottom {
        height: {{ block.bottom_divider_height.value ?: 'initial' }};
        transform: scaleX({{ block.bottom_divider_flip_horizontally.value ? '-1' : 1 }});
    }

</style>
